@model TestApp.Completedtest

@{
    ViewData["Title"] = Model.Test.Name;
}

<div>
    <h4>Completedtest</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Дата
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date.Date)
        </dd>
        <dt class = "col-sm-2">
            Выполнивший
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Person.Name)
        </dd>
        <dt class = "col-sm-2">
            Название теста
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Test.Name)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Вопрос
            </th>
            <th>
                Вариант 1
            </th>
            <th>
                Вариант 2
            </th>
            <th>
                Вариант 3
            </th>
            <th>
                Ответ
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Answers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Question.Questionbody)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Question.Answer1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Question.Answer2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Question.Answer3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @if (item.Value != item.Question.Rigthanswer)
                    {
                        <span style="height: 25px; width: 25px; background-color: #ff0000; border-radius: 50%; display: inline-block;"></span>
                    }
                    else
                    {
                        <span style="height: 25px; width: 25px; background-color: #00ff21; border-radius: 50%; display: inline-block;"></span>
                    }
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td>Итого правильных:</td>
            <td>@Model.Answers.Where(x => x.Question.Rigthanswer == x.Value).Count()</td>
        </tr>
</table>
<div>
    <a asp-action="Menu">Back to List</a>
</div>
